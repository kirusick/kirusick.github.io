doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= `${personalInfo.name} — ${personalInfo.title}`

    style.
      :root {
        --text: #1f2937;
        --muted: #6b7280;
        --accent: #2563eb;
        --bg: #ffffff;
      }

      body {
        margin: 0;
        padding: 40px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Inter, Helvetica, Arial, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.55;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
      }

      h1 {
        font-size: 36px;
        margin-bottom: 4px;
      }

      h2 {
        font-size: 20px;
        margin-top: 24px;
        margin-bottom: 12px;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 6px;
      }

      h3 {
        font-size: 18px;
        margin: 0;
      }

      .subtitle {
        font-size: 18px;
        color: var(--muted);
        margin-bottom: 12px;
      }

      .contact {
        font-size: 14px;
        color: var(--muted);
        margin-bottom: 32px;
      }

      .contact a {
        color: var(--accent);
        text-decoration: none;
      }

      p {
        margin: 8px 0;
      }

      ul {
        margin: 8px 0 16px 20px;
      }

      li {
        margin-bottom: 6px;
      }

      .job {
        margin-bottom: 28px;
      }

      .job-header {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
      }

      .job-meta {
        font-size: 14px;
        color: var(--muted);
      }

      .skills {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 12px 24px;
        font-size: 14px;
      }

      .skills span {
        display: block;
      }

      .education {
        margin-bottom: 16px;
      }
      
      .avatar {
        width: 128px;
        height: 128px;
        border-radius: 50%;
      }

      header {
        display: flex;
        align-items: center;
        gap: 24px;
      }

      .non-breakable {
        white-space: nowrap;
      }

      @media print {
        body {
          padding: 20px;
        }
        .professional-summary h2 {
          margin-top: 12px;
        }
        .cv-pdf {
          display: none;
        }
      }

      @media (max-width: 720px) {
        body {
          padding: 16px;
        }
        header {
          flex-direction: column;
          text-align: center;
          gap: 0px;
        }
        header h1 {
          margin-top: 12px;
        }
        .contact {
          margin-bottom: 0px;
        }
        ul {
          padding-inline-start: 12px;
        }
      }
